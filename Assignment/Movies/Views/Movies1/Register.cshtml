@model Movies.Models.LoginRequest.RegistrationRequest

@{
    ViewData["Title"] = "Register";
}


<style>
    /* CSS for special effects and animations */
    .form-container {
        margin-top: 50px;
        max-width: 400px;
        margin-left: auto;
        margin-right: auto;
        padding: 20px;
        background-color: #f2f2f2;
        border-radius: 10px;
        box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.2);
        animation: fadeIn 1s;
        transition: transform 0.3s ease;
    }

        /* Add hover effect for container */
        .form-container:hover {
            transform: translateY(-5px);
            box-shadow: 0px 5px 15px 0px rgba(0, 0, 0, 0.2);
        }
</style>

<!-- Define keyframes animation outside of Razor syntax block -->


<h1>Register</h1>

<div class="form-container">
    <form asp-action="Register">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="UserName" class="control-label">Username</label>
            <input asp-for="UserName" class="form-control" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Name" class="control-label">Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password" class="control-label">Password</label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Role" class="control-label">Role</label>
            <input asp-for="Role" class="form-control" />
            <span asp-validation-for="Role" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>
</div>

<div style="text-align: center; margin-top: 20px;">
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
