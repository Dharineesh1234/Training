@model IEnumerable<Movies.Models.MoviesReviews>

@{
    ViewData["Title"] = "Index";
}

<h1>Movie Reviews</h1>

<p>
    <input type="submit" value="create" onclick="window.location.href='@Url.Action("Create", "Movies1")'" />
</p>
<style>
    /* Main container */
    .main-container {
        display: flex;
        flex-direction: column;
        height: 100vh;
    }

    /* Header */
    header {
        background-color: #343a40;
        color: #ffffff;
        padding: 10px 0;
        text-align: center;
    }

    /* Footer */
    footer {
        background-color: #343a40;
        color: #ffffff;
        padding: 10px 0;
        text-align: center;
        margin-top: auto;
    }

    /* Content area */
    .content {
        flex-grow: 1;
        padding: 20px;
    }

    /* Table */
    .table-responsive {
        overflow-x: auto;
    }

    /* Top menu bar */
    .topbar {
        background-color: #909998;
        height: 50px; /* Adjust the height as needed */
        position: fixed;
        top: 0;
        left: 0;
        right: 0; /* Stretch to full width */
        overflow-x: auto;
        padding: 0 20px; /* Adjust padding as needed */
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1); /* Adjusted shadow direction */
    }

    /* Menu items */
    .menu-item {
        display: inline-block;
        margin-right: 20px; /* Adjust spacing between menu items */
        color: #ffffff; /* Adjust text color */
        font-weight: bold; /* Adjust font weight */
        line-height: 50px; /* Should match the height of the topbar */
        text-decoration: none;
    }

        /* Example of a menu item */
        .menu-item:hover {
            color: #ffffff; /* Adjust hover color */
            background-color: #555555; /* Adjust hover background color */
        }

        /* Example of active menu item */
        .menu-item.active {
            color: #ffffff; /* Adjust active color */
            background-color: #333333; /* Adjust active background color */
        }
</style>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Review ID</th>
                <th>Movie ID</th>
                <th>Reviewer Name</th>
                <th>Review Text</th>
                <th>Rating</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.ReviewId)</td>
                    <td>@Html.DisplayFor(modelItem => item.MovieId)</td>
                    <td>@Html.DisplayFor(modelItem => item.ReviewerName)</td>
                    <td>@Html.DisplayFor(modelItem => item.ReviewText)</td>
                    <td>@Html.DisplayFor(modelItem => item.Rating)</td>
                    <td>
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.ReviewId">Edit</a>
                       
                </tr>
            }
        </tbody>
        <div class="topbar">
            <a href="#" class="menu-item active">Home</a>
            <a><input type="submit" value="create" onclick="window.location.href='@Url.Action("Create", "Movies1")'" /></a> 
            <!-- Add more menu items as needed -->
        </div>

      
</div>
    </table>

</div>
